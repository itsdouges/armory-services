{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "fetch",
      "image": "madou/gw2armory-fetch",
      "essential": true,
      "memory": 425,
      "environment": [
        {
          "name": "ENV",
          "value": "{{ ENV }}"
        },
        {
          "name": "GITTER_API_KEY",
          "value": "{{ GITTER_API_KEY }}"
        }
      ]
    },
    {
      "name": "server",
      "image": "madou/gw2armory-server",
      "essential": true,
      "memory": 400,
      "links": [
        "fetch"
      ],
      "environment": [
        {
          "name": "ENV",
          "value": "{{ ENV }}"
        },
        {
          "name": "IMAGE_UPLOAD_ACCESS_KEY_ID",
          "value": "{{{ IMAGE_UPLOAD_ACCESS_KEY_ID }}}"
        },
        {
          "name": "IMAGE_UPLOAD_SECRET_ACCESS_KEY",
          "value": "{{{ IMAGE_UPLOAD_SECRET_ACCESS_KEY }}}"
        },
        {
          "name": "SES_ACCESS_KEY_ID",
          "value": "{{{ SES_ACCESS_KEY_ID }}}"
        },
        {
          "name": "SES_SECRET_ACCESS_KEY",
          "value": "{{{ SES_SECRET_ACCESS_KEY }}}"
        },
        {
          "name": "GITTER_API_KEY",
          "value": "{{ GITTER_API_KEY }}"
        }
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ]
    },
    {
      "name": "migration",
      "image": "madou/gw2armory-migration",
      "essential": false,
      "memory": 150,
      "environment": [
        {
          "name": "ENV",
          "value": "{{ ENV }}"
        }
      ]
    }
  ]
}
